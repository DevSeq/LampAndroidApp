<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sinusgear.iot.lampapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/lightbulb" android:theme="@style/AppTheme">

        <activity android:name="com.sinusgear.iot.lampapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.sinusgear.iot.lampapp.LampWidgetProvider"
            android:icon="@drawable/lightbulb"
            android:label="Simple Widget"
            >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/lamp_widget_info" />
        </receiver>

    </application>

</manifest>
